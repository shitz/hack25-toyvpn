<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Login View -->
    <ScrollView
        android:id="@+id/layoutLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/logo"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anapaya EDGE App"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered by Anapaya Systems"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginBottom="32dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"
                android:gravity="start"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:hint="SNAP token input"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="32dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSnapToken"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top|start"
                    android:inputType="textMultiLine" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:backgroundTint="#E0E0E0"
                android:textColor="#757575"
                app:cornerRadius="28dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Connection Setup View -->
    <ScrollView
        android:id="@+id/layoutSetup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/logo"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anapaya EDGE App"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="32dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logged in as hitz@anapaya.net"
                    android:textColor="#546E7A"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textAllCaps="false"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:textColor="#0288D1"
                    android:minWidth="0dp"
                    android:padding="0dp"/>
            </LinearLayout>

            <!-- Error Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeColor="#EF9A9A"
                app:strokeWidth="1dp"
                android:backgroundTint="#FFEBEE"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_access_time"
                        app:tint="#C62828"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:id="@+id/tvErrorMessage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Error message goes here"
                        android:textColor="#C62828"
                        android:textSize="14sp"/>

                    <ImageView
                        android:id="@+id/btnCloseError"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        app:tint="#C62828"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Server address"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etServerAddressFull"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[64-2:0:a7,10.0.0.2]:9000"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SNAP Address"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="32dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSnapAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="http://s01.choeg2.snap.anapaya.net:5001"
                    android:inputType="textUri" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardConnecting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:backgroundTint="#F5F5F5"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvConnectingStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Connecting to [Server]..."
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/bg_icon_green"
                            android:layout_marginEnd="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SNAP Connection..."
                            android:textColor="#000000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/bg_icon_orange"
                            android:layout_marginEnd="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Server Authentication..."
                            android:textColor="#000000"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/btnConnect"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Connect"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:backgroundTint="#0288D1"
                app:cornerRadius="28dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered by Anapaya Systems"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Connected View -->
    <ScrollView
        android:id="@+id/layoutConnected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/logo"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anapaya EDGE App"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="32dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_wifi"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvConnectedServer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connected to [Server]"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:backgroundTint="#F5F5F5"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Connection Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:background="@drawable/bg_icon_blue"
                            android:src="@drawable/ic_access_time"
                            android:layout_marginEnd="12dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Connection Time"
                                android:textSize="12sp"
                                android:textColor="#616161"/>
                            <TextView
                                android:id="@+id/tvDuration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00:00:00"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#000000"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Speed Metrics -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:background="@drawable/bg_icon_orange"
                            android:src="@drawable/ic_speed"
                            android:layout_marginEnd="12dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Speed Metrics"
                                android:textSize="12sp"
                                android:textColor="#616161"/>
                            <TextView
                                android:id="@+id/tvSpeed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="↓ 0 B/s   ↑ 0 B/s"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#000000"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Traffic Volume -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:background="@drawable/bg_icon_purple"
                            android:src="@drawable/ic_data_usage"
                            android:layout_marginEnd="12dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Traffic Volume"
                                android:textSize="12sp"
                                android:textColor="#616161"/>
                            <TextView
                                android:id="@+id/tvVolume"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="↓ 0 B   ↑ 0 B"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#000000"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Assigned Addresses -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:background="@drawable/bg_icon_teal"
                            android:src="@drawable/ic_lan"
                            android:layout_marginEnd="12dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Assigned Addresses"
                                android:textSize="12sp"
                                android:textColor="#616161"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginEnd="16dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="IPv4"
                                        android:textSize="10sp"
                                        android:textColor="#757575"/>
                                    <TextView
                                        android:id="@+id/tvAssignedIp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10.100.100.88"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="#000000"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="IPv6"
                                        android:textSize="10sp"
                                        android:textColor="#757575"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="N/A"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="#000000"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Routes -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:background="@drawable/bg_icon_green"
                            android:src="@drawable/ic_route"
                            android:layout_marginEnd="12dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Routes"
                                android:textSize="12sp"
                                android:textColor="#616161"/>
                            <TextView
                                android:id="@+id/tvRoutes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10.42.42.42/32\n172.30.200.0/24"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#000000"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/btnDisconnect"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Disconnect"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:backgroundTint="#0288D1"
                app:cornerRadius="28dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered by Anapaya Systems"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Splash View -->
    <LinearLayout
        android:id="@+id/layoutSplash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#FFFFFF"
        android:visibility="visible">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anapaya EDGE App"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
    </LinearLayout>

</FrameLayout>
